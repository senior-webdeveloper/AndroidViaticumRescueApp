<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.viaticumrescue.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ViaticumRescueApp">
        <activity
            android:name=".LoadingScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_loading_screen"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PublicManuals"
            android:label="@string/title_activity_public_manuals"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar" />
        <activity
            android:name=".RescueManuals"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_rescue_manuals"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar" />
        <activity
            android:name=".WelcomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:theme="@style/Theme.ViaticumRescueApp.NoActionBar" />
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>